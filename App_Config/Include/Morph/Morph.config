<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <pipelines>

      <initialize>
        <processor patch:after="processor[@type='Sitecore.Forms.Mvc.Pipelines.Initialize.InitializeRoutes, Sitecore.Forms.Mvc']"
                   type="Morph.Forms.Pipelines.Initialize.RegisterFormRouteReplacement, Morph.Forms"/>
      </initialize>
      
      <mvc.actionExecuting>
        <processor  type="Morph.Forms.Pipelines.ActionExecuting.OnFormControllerActionExecuting, Morph.Forms"/>
      </mvc.actionExecuting>

      <mvc.actionExecuted>
        <processor type="Morph.Forms.Pipelines.ActionExecuted.OnFormControllerActionExecuted, Morph.Forms"/>
      </mvc.actionExecuted>
      
    </pipelines>

  </sitecore>
</configuration>
